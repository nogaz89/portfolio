---
interface Props {
  title: string;
  link: string;
  github: string;
  image: string;
  tags: {
    name: string;
    class: string;
    icon: (_props: Record<string, any>) => any;
  }[];
  description: string;
}

const { title, link, github, image, tags, description } = Astro.props;
---

<article>
  <h3 class="text-2xl font-semibold text-yellow-200/90 mb-2">{title}</h3>
  <p class="text-lg mb-4 text-pretty">{description}</p>
  <ul class="flex gap-x-2 flex-row">
    {
      tags.map(({ name, icon: Icon, class: className }) => (
        <li>
          <span
            class={`flex gap-x-2 rounded-full text-xs py-1 px-2 mb-2 ${className}`}
          >
            <Icon class="size-4" />
            {name}
          </span>
        </li>
      ))
    }
  </ul>
  <img
    class="rounded shadow-2xl shadow-white/10"
    src={image}
    alt={`captura de pantalla del proyecto ${title}`}
  />
</article>
